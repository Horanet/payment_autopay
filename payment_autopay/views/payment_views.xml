<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_autopay" model="ir.ui.view">
        <field name="name">acquirer.form.autopay</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'autopay')]}">
                </group>
            </xpath>
        </field>
    </record>

    <record id="transaction_form_autopay" model="ir.ui.view">
        <field name="name">acquirer.transaction.form.autopay</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='acquirer_reference']" position="after">
                <div></div>
            </xpath>
        </field>
    </record>
</odoo>
